@inherits RoadkillLayoutPage
<!DOCTYPE html>
<html lang="en">
<head>
	<title>@ViewBag.Title</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	@Html.Partial("HeadContent")
	@RenderSection("PluginHead", false)

    <script type="text/javascript">

</script>

    <style type="text/css">
        div#map_canvas {
            height: 500px;
            width: 800px;
            position: absolute !important;
            left: 500px;
            top: 0;
        }

.rating16 { text-indent: -99999px; overflow: hidden; background-repeat: no-repeat; display: inline-block; width: 8px; height: 16px; margin-bottom: -3px;}
.rating16.stars16 { background-image: url('/Assets/CSS/images/grey-yellow-16.png');}
.rating16.stars16.active {  cursor:pointer;}
.star16-left_off { background-position: -0px -0px; }
.star16-left_on { background-position: -16px -0px; }
.star16-right_off { background-position: -8px -0px; }
.star16-right_on { background-position: -24px -0px; }

.rating { text-indent: -99999px; overflow: hidden; background-repeat: no-repeat; display: inline-block; width: 12px; height: 24px; }
.rating.stars { background-image: url('/Assets/CSS/images/grey-yellow-24.png');}
.rating.stars.active {  cursor:pointer;}
.star-left_off { background-position: -0px -0px; }
.star-left_on { background-position: -24px -0px; }
.star-right_off { background-position: -12px -0px; }
.star-right_on { background-position: -36px -0px; }

.rating-average { text-indent: -99999px; overflow: hidden; background-repeat: no-repeat; display: inline-block; width: 12px; height: 24px; }
.rating-average.stars { background-image: url('/Assets/CSS/images/grey-yellow-24.png');}

.rating32 { text-indent: -99999px; overflow: hidden; background-repeat: no-repeat; display: inline-block; width: 16px; height: 32px; }
.rating32.stars32 { background-image: url('/Assets/CSS/images/grey-yellow-32-3.png');}
.rating32.stars32.active {  cursor:pointer;}
.star32-left_off { background-position: -0px -0px; }
.star32-left_on { background-position: -32px -0px; }
.star32-right_off { background-position: -16px -0px; }
.star32-right_on { background-position: -48px -0px; }

.container {
  background-color: #fbfafa;
}
/*.meta-title{overflow:hidden;white-space:nowrap;text-overflow:ellipsis;width:100%;font-size:.9375rem;font-weight:700;margin-bottom:.3125rem}*/
    </style>

</head>
<body>
    <!-- Header -->
    @using (Html.BeginForm("Search", "Home", FormMethod.Get))
    {
        <div id="header-wrapper">
            <div class="container">
                <div id="login-status">
                    @Html.Action("LoggedInAs", "User")
                </div>
                <table>
                    <tr>
                        <td style="padding-left:10px;">
                            <a href="@Url.Action("Index", "Home")">
                                <img src="@Url.Content("/Assets/Images/Explik-48.png")" alt="logo" style="width:80px;" />
                            </a>
                        </td>
                        <td style="width:100%;">
                            <div id="bootstrap-nav-menu">
                                @Html.Action("BootstrapNavMenu", "Home")
                            </div>
                        </td>
                        <td>
                            <div id="search" class="searchbar navbar-right hidden-xs hidden-sm">
                                <input type="text" name="q" placeholder="@SiteStrings.Search_PlaceHolder" class="form-control" style="min-width:220px;"/>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    }

    @using (Html.BeginForm("Search", "Home", FormMethod.Get))
    {
        <!-- Search bar for tablets and below -->
        <div class="container hidden-lg hidden-md">
            <div class="row">
                <div id="search-mobile" class="searchbar" style="padding-left:15px;">
                    <input type="text" name="q" placeholder="@SiteStrings.Search_PlaceHolder" class="form-control" />
                </div>
            </div>
        </div>
    }

    <!-- Content -->
    <div id="content-wrapper">
        @RenderSection("PluginPreContainer", false)

        <div id="container" class="container">
            <div id="content">
                @RenderBody()
            </div>
        </div>
        @RenderSection("PageComments", false)
        @RenderSection("PluginPostContainer", false)

    </div>

    <!-- Footer -->
    <div id="footer-wrapper">
        <div id="footer-inner">
            <div class="container">
                <div class="row">
                    <div class="col-xs-1">
                    </div>
                    <div class="col-xs-2">
                        <h6><a href="#">@SiteStrings.Navigation_About_Explik</a></h6>
                    </div>
                    <div class="col-xs-2">
                        <h6><a href="#">@SiteStrings.Navigation_Contact</a></h6>
                    </div>
                    <div class="col-xs-2">
                        <h6><a href="#">@SiteStrings.Navigation_Privacy_Policy</a></h6>
                    </div>
                    <div class="col-xs-2">
                        <h6><a href="#">@SiteStrings.Navigation_Disclaimers</a></h6>
                    </div>
                    <div class="col-xs-2">
                    </div>
                    <div id="top-link" class="col-xs-1">
                        <h6><a href="#">@SiteStrings.Navigation_Top</a></h6>
                    </div>
                </div>

                @RenderSection("PluginFooter", false)
            </div>
        </div>
    </div>
</body>
</html>
