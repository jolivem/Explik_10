@inherits RoadkillLayoutPage
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewBag.Title</title>
    <meta name="description" content=" Aide scolaire. Les meilleures explications en ligne." />
    <meta name="author" content="Explik">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords" content="aide scolaire, expliquations, révision, astuce mnémotechnique, mémorisation, pédagogie, devoir, aide, domicile, contrôle, examen, bac, brevet" />
    <link rel="canonical" href="http://www.explik.fr/" />
    <meta property="og:site_name" content="Explik">
    <meta property="og:title" content="Explik.fr : aide scolaire en ligne ">
    <meta property="og:description" content=" Aide scolaire. Les meilleures explications en ligne.">
    <meta property="og:type" content="website">
    @Html.Partial("HeadContent")
    @RenderSection("PluginHead", false)


</head>
<body>
    <!-- Header -->
    @using (Html.BeginForm("Search", "Home", FormMethod.Get))
    {
        <div id="header-wrapper">
            <div class="container" style="padding-right:0px;">
                <div id="login-status" style="padding-left:8px;">
                    @Html.Action("LoggedInAs", "User")
                </div>
                <table>
                    <tr>
                        <td style="width:100%;">
                            <div id="bootstrap-nav-menu">
                                @Html.Action("BootstrapNavMenu", "Home")
                            </div>
                        </td>
                        <td>
                            <div id="search" class="searchbar navbar-right hidden-xs hidden-sm">
                                <input type="text" name="q" placeholder="@SiteStrings.Search_PlaceHolder" class="form-control" style="min-width:220px;" />
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    }

    @using (Html.BeginForm("Search", "Home", FormMethod.Get))
    {
        <!-- Search bar for tablets and below -->
        <div class="container hidden-lg hidden-md">
            <div id="search-mobile" class="searchbar" style="padding-left:15px;">
                <input type="text" name="q" placeholder="@SiteStrings.Search_PlaceHolder" class="form-control" />
            </div>
        </div>
    }

    <!-- Content -->
    <div id="content-wrapper">
        @RenderSection("PluginPreContainer", false)

        <div id="container" class="container">
            <div id="content">
                @RenderBody()
            </div>
        </div>
        @RenderSection("PageComments", false)
        @RenderSection("PluginPostContainer", false)

    </div>

    <!-- Footer -->
    <div id="footer-wrapper">
        <div class="container" style="padding-right:0px;">
            <div id="footer-inner">
                <ul>
                    <li class="foot-link">
                        <a style="color:#ffffe0;" href="@Url.Action("About", "Home", new { id=2})">@SiteStrings.Navigation_About_Explik</a>
                    </li>
                    <li class="foot-link">
                        <a style="color:#ffffe0;" href="@Url.Action("About", "Home", new { id=1})">@SiteStrings.Navigation_Contact</a>
                    </li>
                    <li class="foot-link">
                        <a style="color:#ffffe0;" href="@Url.Action("About", "Home", new { id=3})">@SiteStrings.Navigation_Privacy_Policy</a>
                    </li>
                    <li class="foot-link">
                        <a style="color:#ffffe0;" href="@Url.Action("About", "Home", new { id=4})">@SiteStrings.Navigation_Disclaimers</a>
                    </li>
                </ul>
                @RenderSection("PluginFooter", false)

            </div>
        </div>
    </div>
</body>
</html>
