
@model List<PageAndUserRatingViewModel>
@{
    ViewBag.Title = SiteStrings.Competition_RatingTitle;
}

<h3>@ViewBag.competitionTitle</h3>
<h4>@SiteStrings.Competition_RatingIntro</h4>
<br />

<div class=" row">
    <div class="col-md-10">

        <table>
            @foreach (PageAndUserRatingViewModel page in Model)
            {
                <tr>
                    <td class='searchresult-td'>
                        <span class="searchresult-title">

                            @if (RoadkillContext.CurrentUsername != page.CreatedBy)
                            {
                                <a href="@Url.Action("ViewForRating", "Competitions", new { id = page.Id, CompetitionId = ViewBag.CompetitionId })">@page.Title</a>
                            }
                            else
                            {
                                @* The page of the current user *@
                                <span style="font-weight:bold;color:#444">@page.Title</span>
                            }
                        </span><br />
                        <span class="searchresult-summary">@MvcHtmlString.Create(page.ContentSummary) ...</span><br />
                        @MvcHtmlString.Create(PageViewModel.EncodeTags(page))
                        
                        @* Do not display rating for the page(s) of the current user *@
                        @if (RoadkillContext.CurrentUsername != page.CreatedBy)
                        {
                            if (page.UserRating == 0)
                            {
                                <span style="color:crimson;">@SiteStrings.Competition_PageNotYetRated</span> <a href="@Url.Action("ViewForRating", "Competitions", new { id = page.Id, CompetitionId = ViewBag.CompetitionId })">@SiteStrings.Competition_RateNowLink</a>
                            }
                            else
                            {
                                <span style="display: inline-block;margin-bottom:-2px;">@MvcHtmlString.Create(page.EncodePageRating())</span>
                            }
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

