@model PageViewModel

<div class="modal" id="pagealert" role="dialog" aria-describedby="Contains meta information about the current page">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="default-header">@Model.Title</h4>
            </div>

            @using (Html.BeginForm("PageAlert", "Pages", FormMethod.Post))
            {
                @Html.Hidden("id", Model.Id)
                <div class="modal-body">
                    <div>@SiteStrings.Alert_Text</div>
                </div>
                <div class="modal-footer">
                    <a href="#" data-dismiss="modal" class="btn pull-left">&lt; @SiteStrings.Shared_Back_Link</a>
                    <input type="submit" id="btnSubmit" class="btn btn-primary right" value="@SiteStrings.Button_Confirm" />
                </div>
            }
        </div>
    </div>
</div>