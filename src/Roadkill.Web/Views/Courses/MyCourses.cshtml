@model List<CourseViewModel>
@{
    ViewBag.Title = SiteStrings.AllMyCourses_Title;
}

<h1>@SiteStrings.AllMyCourses_Title</h1>

<p>
    @SiteStrings.Courses_CreateNew&nbsp;&nbsp;@Html.ActionLink(SiteStrings.Course_BtnCreate, "New", "Courses", new { @class = "btn btn-primary btn-sm" })
</p>



@if (Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@SiteStrings.AllCourses_TitleColumnHeading</th>
                <th>@SiteStrings.MyCourses_Action_Title</th>
            </tr>
        </thead>
        @foreach (CourseViewModel courseModel in Model)
        {
        <tr>
            <td class="coursename stretch">
                @Html.ActionLink(courseModel.Title, "MyCourse", "Courses", new { id = courseModel.CourseId, title = courseModel.EncodedTitle }, null)
            </td>
            <td style="padding:4px;">
                @Html.ActionLink(SiteStrings.Shared_EditLink, "Edit", new { id = courseModel.CourseId }, new { @class = "btn btn-primary btn-sm", @style = "width:100%;" })
            </td>
        </tr>
        }
    </table>
}
@*else
{
    <p>@SiteStrings.AllPages_NoPages</p>
}*@