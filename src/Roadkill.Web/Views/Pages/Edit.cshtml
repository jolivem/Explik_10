@model PageViewModel
@{
	ViewBag.Title = SiteStrings.EditPage_Title;
}

<script type="text/javascript">
	$(document).ready(function ()
	{
		var pageTags = [ @(Html.Raw(Model.JavascriptArrayForAllTags())) ];
		var editPage = new Roadkill.Web.EditPage(pageTags);

		ToggleIsVideo();
		ToggleIsCopied();

	    function ToggleIsVideo(){
	        
	        if ($('#IsVideo').is(':checked')) {
	            //$('#content-page').hide();
	            //$('#previewpanel-container').hide();
                //$('#wysiwyg-toolbar').hide();
                $('#video-url').show();
                $('#video-url').removeClass("hidden");
                //$('#summary').show();
                //$('#summary').removeClass("hidden");
                $('#video-description').show();
                $('#video-description').removeClass("hidden");
                
	        }
	        else {
	            //$('#content-page').show();
	            //$('#content-page').removeClass("hidden");
                //$('#previewpanel-container').show();
                //$('#previewpanel-container').removeClass("hidden");
                //$('#wysiwyg-toolbar').show();
                //$('#wysiwyg-toolbar').removeClass("hidden");
	            $('#video-url').hide();
	            //$('#summary').hide();
                $('#video-description').hide();
            }
	    }

	    $('#IsVideo').click(function () {
	        ToggleIsVideo();
	    });

	    $('#IsCopied').click(function () {
	        ToggleIsCopied();
	    });

	    function ToggleIsCopied() {

	        if ($('#IsCopied').is(':checked')) {
	            $('#pseudonym').show();
	            $('#pseudonym').removeClass("hidden");
	            $('#pseudonym-title').show();
	            $('#pseudonym-title').removeClass("hidden");
            }
	        else {
	            $('#pseudonym').hide();
	            $('#pseudonym-title').hide();
            }
	    }
	});
</script>
<style>
	.searchbar	{ display:none; }
</style>

<div id="editpage" class="row">
    <div id="editpage-form-container" class="col-sm-6">
        @Html.BootstrapValidationSummary(SiteStrings.EditPage_Error)

        <form class="form-horizontal" role="form" method="post" id="editpage-form">
            @(Html.HiddenFor<PageViewModel, int>(p => p.Id))
            @(Html.HiddenFor<PageViewModel, string>(p => p.PreviousTitle))
            @(Html.HiddenFor<PageViewModel, string>(p => p.RawTags))

            @*<div class="form-group col-sm-12">*@
            @if (RoadkillContext.IsAdmin)
            {
                <label for="IsLocked" class="checkbox">
                    @(Html.BootstrapCheckBoxFor<PageViewModel>(p => p.IsLocked, SiteStrings.EditPage_AdminOnly, 3))
                    @SiteStrings.EditPage_AdminOnly
                </label>
                <div class="row">
                    <div class="col-sm-6">
                        <label for="IsCopied" class="checkbox">
                            @(Html.BootstrapCheckBoxFor<PageViewModel>(p => p.IsCopied, SiteStrings.EditPage_CopiedFromOtherSite, 4))
                            @SiteStrings.EditPage_CopiedFromOtherSite
                        </label>
                    </div>
                    <div id="pseudonym-title" class="form-inline col-sm-2">
                        <label for="Pseudonym">@SiteStrings.EditPage_Pseudonym</label>
                    </div>
                    <div id="pseudonym" class="form-inline  col-sm-4">
                        @(Html.BootstrapTextBoxFor<PageViewModel, string>(p => p.Pseudonym, SiteStrings.EditPage_Pseudonym, false, 5))
                    </div>
                </div>
            }
            <div class="form-group">
                <div class="col-sm-12">
                    <label for="Title">@SiteStrings.EditPage_Title_Label</label>
                    @(Html.BootstrapTextBoxFor<PageViewModel, string>(p => p.Title, SiteStrings.EditPage_Title_Label, false, 1))
                </div>
            </div>

            <div class="form-inline">
                @(Html.TextBox("TagsEntry", null, new { @class = "form-control tm-input", autocomplete = "off", tabindex = 2, placeholder = SiteStrings.EditPage_Tags_Label }))
            </div>

            <div class="form-inline">
                <label for="IsVideo" class="checkbox">
                    @(Html.BootstrapCheckBoxFor<PageViewModel>(p => p.IsVideo, SiteStrings.EditPage_IsVideo_Label))
                    @SiteStrings.EditPage_IsVideo_Label
                </label>
            </div>

            @*<div id="summary" class="hidden form-inline">
            <label for="Summary">Summary___</label>
            @(Html.BootstrapTextAreaFor(p => p.Summary, SiteStrings.EditPage_Summary_Label))
        </div>*@

            <div id="video-url" class="hidden form-inline">
                <label for="VideoUrl">@SiteStrings.EditPage_VideoUrl_Label</label>
                @(Html.BootstrapTextBoxFor<PageViewModel, string>(p => p.VideoUrl, SiteStrings.EditPage_Title_Label, false, 1))
            </div>

            <div id="video-description" style="margin-top:17px">
                @SiteStrings.EditPage_Video_description
            </div>
            <div id="content-page">
                @Html.Partial("WysiwgToolbar")
                @(Html.TextAreaFor<PageViewModel, string>(p => p.Content, new { @class = "form-control", tabindex = 5 }))
            </div>

            <div id="editpage-button-container" class="row">
                <div class="col-sm-1">
                    @if (Model.Id > 0)
                    {
                        <h6>@Html.ActionLink(SiteStrings.Button_Cancel, "Index", "Wiki", new { id = Model.Id, title = Model.EncodedTitle }, null)</h6>
                    }
                    else
                    {
                        <h6>@Html.ActionLink(SiteStrings.Button_Cancel, "Index", "Wiki")</h6>
                    }

                </div>
                <div id="editpage-save-button" class="col-sm-11">
                    <!-- @SiteStrings.Button_Preview" -->
                    <input type="submit" class="btn btn-primary saveButton" value="@SiteStrings.Button_Save" tabindex="6" />
                </div>
            </div>

            @Html.DialogPartial("ChooseImage")
            @Html.DialogPartial("MarkupHelp")
        </form>
    </div>
    <!-- Preview panel -->
    <div class="col-sm-6" id="previewpanel-container" style="padding-top:15px;">
        <div id="previewpanel-inner" class="panel panel-default">
            <div id="preview-heading" class="panel-heading">@SiteStrings.EditPage_Preview</div>
            <div class="panel-body" id="preview-wrapper">
                <div id="previewLoading" class="hide"><img src="@(Url.Content("~/Assets/Images/white-loading.gif"))" border="0" alt="loading" /></div>
                <div id="preview"><br class="clear" /></div>
            </div>
        </div>
    </div>
</div>

