@model IEnumerable<SearchResultViewModel>
@{ 
	string title = string.Format(SiteStrings.Search_Results, ViewData["search"]);
	if (Model.Count() == 0)
	{
		title = string.Format(SiteStrings.Search_NoResults, ViewData["search"]);
	}
	
	ViewBag.Title = title;
}


@if (Model.Count() == 0)
{
	<h1>@title</h1>
}
else
{
	<h1>@title</h1>
}

<style type="text/css">
    .thumb-crop {
        display: inline-block;
        height: 100px;
        overflow: hidden;
    }

        .thumb-crop img {
            width: 120px;
        }
</style>


<div class="container pull-left">
    @using (Html.BeginForm("Search", "Home", FormMethod.Get))
    {
        <div class="row pull">
            <div class="col-sm-5">
                @Html.TextBox("q", null, new { placeholder = SiteStrings.Search_PlaceHolder, @class = "form-control" })
            </div>
            <div class="col-sm-5">
                <input type="submit" class="btn btn-primary" value="@SiteStrings.Button_Search" />
            </div>
        </div>

        foreach (SearchResultViewModel result in Model)
        {
            <div class="searchresult row">
                <div class="col-sm-2 padded thumb-crop" style="border: 2px solid #4CAF50;">
                    <img src="@result.Canvas" style="float: left;">
                </div>
                <div class="col-sm-10 padded " style="border: 2px solid red; overflow: auto;">
                    <span class=" searchresult-title">@Html.ActionLink(result.Title, "Index", "Wiki", new { id = result.Id, title = result.EncodedTitle }, null)</span><br />
                    <span class="searchresult-summary">@MvcHtmlString.Create(result.ContentSummary)...</span><br />
                    <span>
                        <span class="searchresult-date">@result.CreatedBy - @result.CreatedOn.ToString("dd MMM yyyy")</span>
                        <span class="searchresult-tags">@Html.Partial("TagBlocks", result.TagsAsList())</span>
                        <span class="searchresult-date">@MvcHtmlString.Create(@result.EncodePageRating(result.Rating))</span>
                    </span>
                </div>
            </div>
        }
    }
</div>